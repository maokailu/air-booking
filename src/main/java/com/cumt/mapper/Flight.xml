<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cumt.mapper.FlightMapper">
    <insert id="add" parameterType="Flight" >
        insert into flight ( name ) values (#{name})
    </insert>

    <delete id="delete" parameterType="Flight" >
        delete from flight where id= #{id}
    </delete>

    <select id="get" parameterType="_int" resultType="Flight">
        select * from   flight  where id= #{id}
    </select>

    <update id="update" parameterType="Flight" >
        update flight set name=#{name} where id=#{id}
    </update>
    <select id="list" resultType="Flight">
        select * from flight
    </select>
</mapper>

