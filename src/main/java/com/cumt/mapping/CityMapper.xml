<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.cumt.mapper.CityMapper">
    <resultMap id="BaseResultMap" type="com.cumt.pojo.City">
        <id column="id" jdbcType="BIGINT" property="id" />
        <result column="city_name" jdbcType="VARCHAR" property="cityName" />
        <result column="city_code" jdbcType="VARCHAR" property="cityCode" />
        <result column="country_name" jdbcType="INTEGER" property="countryName" />
    </resultMap>
    <select id="getHotCitys" resultMap="BaseResultMap" resultType="City">
          select city.id, country.country_name, city.city_code, city.city_name from city INNER JOIN hot_city INNER JOIN country on city.city_code = hot_city.city_code and city.country_code=country.country_code
    </select>
</mapper>